<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/white_rounded"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/priority_48px"
                android:id="@+id/imgBtn_reminderPriority"
                android:background="@null"
                app:tint="@color/material_dynamic_neutral60"
                android:layout_gravity="center_vertical" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_reminderTitle"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            <TextView
                    android:text="@string/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/txtView_reminderDescription"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            <TextView
                    android:text="@string/placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_reminderTime"
                    android:textColor="@color/material_dynamic_neutral40" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>